<UserControl
    x:Class="WavRecorder.Scenario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WavRecorder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <local:GroupBox x:Name="Group" Header="Empty">
        <local:GroupBox.CustomContent>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RecordButton" Content="Start Recording" Margin="0 0 20 0" Click="RecordClicked"  />
                <Button Content="Play" Margin="0 0 20 0" Click="PlayClicked" />
                <TextBlock Text="Info ..." Height="20" Name="Info"></TextBlock>
            </StackPanel>
        </local:GroupBox.CustomContent>
    </local:GroupBox>
</UserControl>
